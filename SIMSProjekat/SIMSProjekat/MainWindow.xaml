<Page x:Class="SIMSProjekat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSProjekat"
        ShowsNavigationUI="False"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowHeight="485" WindowWidth="810">
    <Grid Background="#FFF3FFFE">
        <Label Content="Email:" HorizontalAlignment="Left" Margin="299,117,0,0" VerticalAlignment="Top" FontSize="14" Width="94"/>
        <TextBox HorizontalAlignment="Left" Name="email" Margin="299,151,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" Height="27"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="299,197,0,0" VerticalAlignment="Top" FontSize="14" Width="94"/>
        <TextBox HorizontalAlignment="Left" Name="password" Margin="299,231,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146" Height="27"/>
        <Button Content="Login" Name="login" HorizontalAlignment="Left" Margin="311,310,0,0" VerticalAlignment="Top" Height="30" Width="122" FontSize="14" Click="Login_OnClick"/>
        <Frame NavigationUIVisibility="Hidden" x:Name="MainFrame"/>

    </Grid>
</Page>
